# OpenTelemetry Java Instrumentation Configuration
# Source this file before running the instrumentation script: source java-instrumentation-config.env

# Service identification
export OTEL_SERVICE_NAME=""                    # Leave empty for auto-detection
# export OTEL_RESOURCE_ATTRIBUTES="environment=production,version=1.0.0"

# OpenTelemetry Collector endpoint
# export OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
# export OTEL_EXPORTER_OTLP_PROTOCOL="grpc"      # grpc or http/protobuf

# Exporters configuration
export OTEL_LOGS_EXPORTER="otlp"               # otlp, logging, none
export OTEL_METRICS_EXPORTER="otlp"            # otlp, logging, prometheus, none
export OTEL_TRACES_EXPORTER="otlp"             # otlp, logging, jaeger, zipkin, none

# Advanced OpenTelemetry settings (optional)
# export OTEL_PROPAGATORS="tracecontext,baggage"
# export OTEL_TRACES_SAMPLER="parentbased_traceidratio"
# export OTEL_TRACES_SAMPLER_ARG="0.1"
# export OTEL_INSTRUMENTATION_JDBC_ENABLED="true"
# export OTEL_INSTRUMENTATION_KAFKA_ENABLED="true"
# export OTEL_INSTRUMENTATION_HTTP_CLIENT_ENABLED="true"
# export OTEL_INSTRUMENTATION_HTTP_SERVER_ENABLED="true"

# Middleware.io specific settings (uncomment if using Middleware.io)
export MW_API_KEY="****"
export OTEL_EXPORTER_OTLP_ENDPOINT="https://****.middleware.io:443"
export OTEL_EXPORTER_OTLP_HEADERS="authorization=****"
export OTEL_RESOURCE_ATTRIBUTES="mw.account_key=****"
